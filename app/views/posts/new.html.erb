<div id="outer">
  <%= form_for @post do |f| %>
      <div id="inner">
        제목:<br>
        <%= f.text_field :title %><br>
        내용:<br>
        <%= f.text_area :body, rows: 5 %><br>
        <%= f.submit 'submit' %>
      </div>
  <% end %>
</div>
<br>

<div id="outer">
  <% @posts.each_with_index do |p, index| %>
      <div id="inner">
        <%= index + 1 %>번째 울림<br>
        제목:<%= p.title %><br>
        내용:<%= p.body %>
      </div>
      <br>
  <% end %>
</div>